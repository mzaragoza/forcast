= render "shared/flash"
%h1 Forecast
= form_with(method: 'get', local: true) do
  = label :address, "What is your address?"
  %br
  = text_field_tag(:address, @address, size: 70)
  %br
  = submit_tag("Lookup")

%br
= "latitude: #{@geocoder.latitude}"
%br
= "longitude: #{@geocoder.longitude}"
%br
= "postal_code: #{@geocoder.postal_code}"
%br
